@model AppointmentApp.Models.ExpenseType

<h1 class="text-black-50 pl-2 text-center text-capitalize">Expense Types</h1>
<div class="border p-2">
    <h3 class="text-black-50 pl-2">Delete expense type</h3>
</div>
<br />
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
        <div class="row p-3 text-black-50">
            <div class="col-lg-12">
                <div class="form-group row text-center">
                    <div class="col-2">
                        <label asp-for="ExpenseTypeCode"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExpenseTypeName"></label>
                    </div>
                </div>
                <div class="form-group row text-center">
                    <div class="col-2">
                        <input asp-for="ExpenseTypeCode" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="ExpenseTypeName" disabled class="form-control" />
                    </div>
                </div>
                <p class="text-danger font-italic p-3">** Please double check, once an item is deleted, it's unrecoverable</p>
                <div class="form-group row">
                    <div class="col-8 offset-2 row p-3">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Go Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
</form>

