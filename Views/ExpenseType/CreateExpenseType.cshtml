@model AppointmentApp.Models.ExpenseType


<h1 class="text-black-50 pl-2 text-center text-capitalize">Expense Types</h1>
<div class="border p-2">
    <h3 class="text-black-50 pl-2">How to enter new expense code</h3>
    <p class="p-2 text-black-50">Please enter the following information:</p>
    <ol class="text-black-50">
        <li> Expense Code i.e. 1005</li>
        <li> Expense Code name</li>
    </ol>
</div>
<br />
<form method="post" asp-action="CreateExpenseType">
    <div class="border p-3">
        <div class="form-group row">
            <h3 class="text-black-50 pl-2">Add New Expense Code Item</h3>
        </div>
        <div class="row p-3 text-black-50">
            <div class="col-lg-12">
                <div class="form-group row text-center">
                    <div class="col-2">
                        <label asp-for="ExpenseTypeCode"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExpenseTypeName"></label>
                    </div>
                </div>
                <div class="form-group row text-center">
                    <div class="col-2">
                        <input asp-for="ExpenseTypeCode" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="ExpenseTypeName" class="form-control" />
                    </div>
                </div>
                <p class="text-danger font-italic p-3">** Please check the data entered then once happy, click create new expense code</p>
                <div class="form-group row">
                    <div class="col-8 offset-2 row p-3">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create New Expense Code" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Go Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
