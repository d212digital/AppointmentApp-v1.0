@model IEnumerable<AppointmentApp.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Current Expenses</h2>
        </div>
        <div class="col-6">
            Create New Expense Item
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Code
                    </th>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Company
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="30%"></td>
                    <td width="30%">@item.ExpenseType</td>
                    <td width="30%">@item.Id</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses have been created yet</p>
    }

</div>



