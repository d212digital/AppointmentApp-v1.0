@model AppointmentApp.Models.Item


<h1 class="text-black-50 pl-2 text-center text-capitalize">Expenses</h1>
<div class="border p-2">
    <h3 class="text-black-50 pl-2">How to enter new expenses</h3>
    <p class="p-2">Please enter the following information:</p>
    <ol>
        <li> Invoice/Expense Date</li>
        <li> Expense Code i.e. 1002</li>
        <li> Expense Type i.e. Credit Card or Fees for example</li>
        <li> Who or what is being paid i.e. BarclayCard or PayPal</li>
        <li> Total spend amount in £ and pence</li>
    </ol>
</div>
<br />
<form method="post" asp-action="CreateExpenses">
    <div class="border p-3">
        <div class="form-group row">
            <h3 class="text-black-50 pl-2">Add New Expense Item</h3>
        </div>
        <div class="row p-3">
            <div class="col-lg-12">
                <div class="form-group row text-center">
                    <div class="col-2">
                        <label asp-for="ExpenseDate"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExpenseCode"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExpenseType"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="ExpenseAmount"></label>
                    </div>
                </div>
                <div class="form-group row text-center">
                    <div class="col-2">
                        <input asp-for="ExpenseDate" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="ExpenseCode" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="ExpenseType" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="ExpenseName" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="ExpenseAmount" class="form-control" />
                    </div>
                </div>
                <p class="text-danger font-italic p-3">** Please check the data entered then once happy, click create new expense</p>
                <div class="form-group row">
                    <div class="col-8 offset-2 row p-3">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create New Expense" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Go Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
